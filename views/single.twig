{% extends "layouts/layout-base.twig" %}

{% block content %}

    <div class="container container--small">

        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <header class="entry-header">
                <h1 class="entry-title">{{ post.title }}</h1>
                <time>{{ post.display_date }}</time>
            </header>
            {{post.content}}
        </article>

        <aside class="post-aside">

            <h4>Categorized under:</h4>
            <ul class="post-categories">
                {{ categories_list }}
            </ul>

            <!-- Data found in comments.php -->
            {{ function( 'comments_template' ) }}

            {% if prev_link or next_link %}
                <ul class="post-navigation pager">
                    {% if prev_link %}<li><a href="{{ prev_link }}">Previous Post</a></li>{% endif %}
                    {% if next_link%}<li><a href="{{ next_link }}">Next Post</a></li>{% endif %}
                </ul>
            {% endif %}

        </aside>
        
    </div>

{% endblock %}