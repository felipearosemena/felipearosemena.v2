{% extends "layouts/base.twig" %}

{% block masthead %}

  <div class="hero hero--standard">
    <div class="container">
      <h1 class="mb-0 text-center">
        {{ post.post_title }}
      </h1>
    </div>
  </div>

{% endblock %}

{% block content %}
  
  <section class="page-section page-section--about">

    <div class="spread__content one-whole">
      <div class="container container--md">
        
        {% if post.post_lead %}
          <p class="post-lead">
            {{ post.post_lead }}
          </p>
        {% endif %}
        

        <h3>Skills</h3>

        <div class="post-content">
          {{ post.content }}
        </div>
      </div>
    </div>

  </section>

  {% include 'includes/project-listing.twig' with { 
    projects:[projects[0]],
    tab_label: 'Recent Work'
  } %}

{% endblock %}

{% block bottom %}
  {% include ('includes/cta.twig') %}
{% endblock %}