<nav id="mobile-nav" class="site-nav-mobile dinner-menu element-hidden--desk" role="navigation">
        
    {% include('includes/header/header_searchform.twig') %} 

    <ul class="site-nav-mobile__menu" id="mobile-menu">
    
        {% for item in menu.get_items %} 
            <li class="{{item.classes | join(' ')}} panel">

                <a href="{{item.get_link}}"> {{item.title}} </a>

                {% if item.get_children %}
                    <i data-toggle="collapse" class="icon collapsed" data-parent="#mobile-menu" data-target="#{{item.id}}"></i>
                {% endif %}
                
                {% if item.get_children %}
                    <ul class="sub-menu collapse" id="{{item.id}}">
                        {% for child in item.get_children %}
                            <li class="{{child.classes | join(' ')}}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                        {% endfor %}
                  </ul>
                 {% endif %}

            </li> 
            
        {% endfor %}

    </ul>

</nav><!-- .site-nav-->
