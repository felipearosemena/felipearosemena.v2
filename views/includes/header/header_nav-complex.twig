<nav class="site-nav site-nav--complex element-hidden--mobile" role="navigation">

    <div class="container  nav-dropdown">
    
        <ul class="site-nav__menu site-nav__menu--complex">

            {% for item in menu.get_items %}
                
                <li class="{{item.classes | join(' ')}}">
                    <a class="nav-main-link" href="{{item.get_link}}"> {{item.title}} </a>

                    {% if item.get_children %}
                        <ul class="sub-menu">
                            {% for child in item.get_children %}
                                <li class="{{child.classes | join(' ')}}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                </li>
                
            {% endfor %}

        </ul>
    
    </div>

</nav><!-- .site-nav-->