<nav class="site-nav site-nav--util" role="navigation">
  
    <span class="nav-dropdown element-hidden--mobile">
  
        <ul class="site-nav__menu site-nav__menu--util">

            {% for item in util_menu.get_items %}

                <li class="{{item.classes | join(' ')}}">

                    <a class="nav-main-link" href="{{item.get_link}}">
                        {{item.title}}
                    </a>

                    {% if item.get_children %}
                        <ul class="sub-menu">
                            {% for child in item.get_children %}
                                <li class="{{child.classes | join(' ')}}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                </li>

            {% endfor %}

        </ul>
    
        {% include('includes/header/header_searchform.twig') %}
    
    </span>

    {% include('includes/header/header_cta.twig') %}
  
</nav><!-- .site-nav-->
