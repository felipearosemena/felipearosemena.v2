<div class="content-sections">
    
    {% for field in acf_fields.sidebar_layout_content %}

        {# Add extra class if it's grid, so we can target specific grid types #}
        {% if field.acf_fc_layout     == 'grid' %}
        <section class="content-section content-section--{{field.acf_fc_layout}} content-section--grid-{{field.grid_items | length}}">
        {% else %}
        <section class="content-section content-section--{{field.acf_fc_layout}}">
        {% endif %}
            
            {# WP Editor Field#}
            {% if field.acf_fc_layout     == 'content_editor' %}
        
                {{ field.content_editor }}

            {# Content Image Field#}
            {% elseif field.acf_fc_layout == 'content_image' %}
                
                {{ macros.img(field.image, 'featured') }}

            {# Media Listing Field#}
            {% elseif field.acf_fc_layout == 'media_listing' %}
            
                {% include('includes/content/content_media-listing.twig') %}
        
            {# Banner Field#}
            {% elseif field.acf_fc_layout == 'banner' %}
                
                {% include('includes/content/content_banner.twig') %}
          
            {# Grid Field#}
            {% elseif field.acf_fc_layout == 'grid' %}
                
                {% include('includes/content/content_grid.twig') %}

            {# Slider Field#}
            {% elseif field.acf_fc_layout == 'slider' %}
            
                {% include('includes/content/content_slider.twig') %}

            {% endif %}
        
        </section>
      
    {% endfor %}
    
</div>
