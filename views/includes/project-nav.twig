<header class="container">
  <span class="tab-label">Next Project</span>
</header>

{% spaceless %}
<section class="tiles">

  <article class="tile tile--dark">
    <div class="tile__body">

      {% if project.thumbnail %}
      <div class="tile__img">
        <a href="{{ project.link }}" class="browser-shot browser-shot--scroll" data-scroll-section>
          {{ macros.img(project.thumbnail, 'featured-md') }}
        </a>
      </div>
      {% endif %}

      <div class="tile__content">
        <h3 class="tile__title">{{ project.title }}</h3>

        {% if project.post_excerpt %}
          <p>{{ project.post_excerpt }}</p>
        {% endif %}

        <div class="mt-1">
          <a href="{{ project.link }}" class="btn btn--{{ project.slug }}">View Project</a>
        </div>
      </div>
    </div> 

    <div class="tile__bg" ></div>
  </article>

</section>
{% endspaceless %}
